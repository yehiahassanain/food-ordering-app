generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String      @id @default(uuid())
  name        String
  description String
  image       String
  order       Int
  price       Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  sizes       Size[]
  extra       Extra[]
}

model Size {
  id        String   @id @default(uuid())
  name      ProductSizes
  price     Float
  product   Product @relation(fields: [productId], references: [id])
  productId String
}


model Extra {
  id        String   @id @default(uuid())
  name      ExtraIngredients
  price     Float
  product   Product @relation(fields: [productId], references: [id])
  productId String
}


enum ProductSizes {
  SMALL
  MEDIUM
  LARGE
}

enum ExtraIngredients {
  CHEESE
  BACON
  LETTUCE
  TOMATO
  ONION
  PICKLES
  MUSHROOMS
  JALAPENOS
  AVOCADO
}